<H1>API Test Panel</H1>
<div id="subscription-key-block">
	<h3>Subscription Key</h3>
	{{input id="subscriptionKey" value=config.subscriptionKey}}
</div>
<h3>Person Groups</h3>
<button{{action "loadPersonGroups"}}>Load</button>
<select onchange={{action "updatePersonGroup" value ="personGroup"}}>
	{{#each model.personGroups as |personGroup|}}
	<option value=model.personGroup>{{personGroup.name}}</option> {{/each}}
</select>

<p/>
<h3>Create Person Group</h3>

Name: {{input id="person-group-name-text" value=model.personGroup.name }}
User Data: 
{{input id="person-group-user-data-text" value=model.personGroup.userData }}
<button{{action "addPersonGroup"}}>Create</button>
<p>
{{textarea  id="add-person-person-group-result-area" value=addPersonGroupResponse cols="80" rows="6"}}
</p>
<p/>

<h3>Image (Paste an image URI or...)</h3>
<button id="take-picture-button"{{action "takeAPicture"}}>Take
	a picture</button>
<p>
{{facial-recognition pictureTaken=(action "pictureTaken")}}
{{textarea id="image-text" value=imageUri cols="80" rows="6"}}
</p>
<h3>Detect Features (from image URI)</h3>
<button{{action "detect"}}>Detect</button>
<p>
{{textarea id="detect-result-area" value=detectResponseString cols="80" rows="6"}}
</p>
<h3>Identify</h3>
<button{{action "identify"}}>Identify</button>
{{textarea  id="identify-result-area" value=identifyResponseString cols="80" rows="6"}}

<h3>Get Person</h3>
<button{{action "getPersonRequest"}}>Get</button>
person id: {{input id="person-id-text" value=model.person.id}}
{{textarea  id="get-person-result-area" value=getPersonResult cols="80" rows="6"}}
<p/>

<p/>
<h3>Create Person</h3>
<button{{action "addPerson"}}>Create</button>
Name: {{input id="name-text" value=model.person.name }}
User Data: 
{{input id="user-data-text" value=model.person.userData }}
<p>
{{textarea  id="add-person-result-area" value=addPersonResponse cols="80" rows="6"}}
</p>
<p/>

<h3>Add Face</h3>
<button{{action "addFace"}}>Add</button>
{{textarea  id="face-result-area" value=addFaceResult cols="80" rows="6"}}

<h3>Train Person Group</h3>
<button{{action "trainGroup"}}>Add</button>
{{textarea  id="train-person-result-area" value=trainPersonResult cols="80" rows="6"}}


