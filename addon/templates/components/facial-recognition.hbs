<h1 class="center-h1" id='intro'> Take your photo </h1>
{{#ember-webcam
	didSnap=(action 'didSnap')
  	didError=(action 'didError')
  		as |camera|}}
  		<p id='emotionBubble' visibility: hidden class="speech">SitePoint Rocks!</p>
  	<button class="camera-button" {{action camera.snap}}> Take Snapshot!
  		</button>
	{{/ember-webcam}}
	

<h1 class="center-h1" id='found' visibility: hidden> We recognized you</h1>
<h1 class="center-h1" id='not-found' visibility: hidden> We don't recognize, you try again</h1>


{{yield}}